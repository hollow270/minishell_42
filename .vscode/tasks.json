{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
				"-I${workspaceFolderBasename}/inc",
                "~/Desktop/42_cursus/42_minishell/src/*/*.c",
				"~/Desktop/42_cursus/42_minishell/utils/*.c",
				"~/Desktop/42_cursus/42_minishell/src/main.c",
                "-o",
                "~/Desktop/42_cursus/42_minishell/minishell",
				"-lreadline"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}